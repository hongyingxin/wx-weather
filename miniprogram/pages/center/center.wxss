/* pages/center/center.wxss */

.userinfo {
  width: 750rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userAvatar {
  overflow: hidden;
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 20rpx;
  margin-top: 50rpx;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.buttonUser {
  display: none;
  width: 600rpx;
  margin-top: 60rpx;
}

.container_box {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.progress_box {
  position: relative;
  width: 220px;
  height: 220px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress_bg {
  position: absolute;
  width: 220px;
  height: 220px;
}

.progress_canvas {
  width: 220px;
  height: 220px;
}

.progress_text {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.progress_info {
  font-size: 36rpx;
  padding-left: 16rpx;
  letter-spacing: 2rpx;
}

.progress_dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fb9126;
}

.date-title {
  margin-top: 40rpx;
  font-size: 32rpx;
}

.title_red {
  color: red;
}
.scancode{
  margin: 0 auto;
  margin-top: 100rpx;
  width: 80%;
  height: 80rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border: 1rpx solid aquamarine;
  background-image: linear-gradient(-90deg, #29bdd9 0%, #276ace 100%);
  box-sizing: content-box;
  border-radius: 40rpx;
}
.section{
  width: 80%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  border: 1px solid #45c2e3;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.input-box{
  position: relative;
  width: 100%;
  font-size: 24rpx;
  color: e3e3e3;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.button-box{
  margin-top: 20rpx;
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
  color: #fff;
  font-size: 32rpx;
  background-image: linear-gradient(-90deg, #a1c4fd 0%, #c2e9fb 100%);
  box-shadow: -4rpx -4rpx 4rpx #c2e9fb;
}
